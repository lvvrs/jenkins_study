#!groovy
//Check Jenkins host
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'MASTER'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '30', artifactNumToKeepStr: '30'))
        timestamps()
    }
    stages {
        stage("Hostname -i") {
            steps {
                sh '\'hostname \' -i'
            }
        }
        stage("Whoami") {
            steps {
                sh 'whoami'
            }
        }
        stage("Uptime") {
            steps {
                sh 'uptime'
            }
        }
    }
}