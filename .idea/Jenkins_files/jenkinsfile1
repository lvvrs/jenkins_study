#!groovy
//Check Jenkins host
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'MASTER'
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '30', artifactNumToKeepStr: '30'))
        timestamps()
    }
    stages {
        stage(Sleep) {
            steps {
                sh 'sleep 5'
            }
        }
        stage("Hostname") {
            steps {
                sh 'hostname'
            }
        }
        stage("Whoami") {
            steps {
                sh 'whoami'
            }
        }
        stage("Uptime") {
            steps {
                sh 'uptime'
            }
        }
        stage("Hostname 2") {
            steps {
                sh 'hostname'
            }
        }
    }
}